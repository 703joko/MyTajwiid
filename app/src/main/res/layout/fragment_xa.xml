<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
	<ScrollView 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout 
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	<TextView
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tafkhim"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:gravity="left" />
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" Ada 6 macam ra’ yang dibaca tebal :"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:gravity="left" />
	
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="- Ro’ fathah dan Ro’ fathah tanwin"
        android:paddingLeft="5.0dip"
        android:layout_gravity="center"
        android:gravity="left" />
	
	<ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ra_a"
        android:id="@+id/img"
        android:layout_gravity="center"
        android:gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:text="Contoh Suara"
        android:id="@+id/tafkhim_a"
        android:layout_gravity="center"
        android:gravity="right" />
	


			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="- Ro’ dommah dan Ro’ dommah tanwin"
				android:paddingLeft="5.0dip"
				android:layout_gravity="center"
				android:gravity="left" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/ra_b"
				android:id="@+id/img"
				android:layout_gravity="center"
				android:gravity="left" />
			<Button
				android:layout_width="wrap_content"
				android:layout_height="50.0dip"
				android:text="Contoh Suara"
				android:id="@+id/tafkhim_b"
				android:layout_gravity="center"
				android:gravity="right" />
			
			
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="- Ro’ sukun didahului fathah atau dommah"
				android:paddingLeft="5.0dip"
				android:layout_gravity="center"
				android:gravity="left" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/ra_c"
				android:id="@+id/img"
				android:layout_gravity="center"
				android:gravity="left" />
			
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="- Ro’ sukun bertemu huruf isti’la (huruf yg dibaca tebal) dalam satu kalimat"
				android:paddingLeft="5.0dip"
				android:layout_gravity="center"
				android:gravity="left" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/ra_d"
				android:id="@+id/img"
				android:layout_gravity="center"
				android:gravity="left" />
	
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="- Ro’ sukun didahului alif berkepala sod"
				android:paddingLeft="5.0dip"
				android:layout_gravity="center"
				android:gravity="left" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/ra_e"
				android:id="@+id/img"
				android:layout_gravity="center"
				android:gravity="left" />
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="- Ro’ sukun karena waqof, didahului huruf mati selain ya’ yang sebelumnya fathah dan dommah"
				android:paddingLeft="5.0dip"
				android:layout_gravity="center"
				android:gravity="left" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/ra_f"
				android:id="@+id/img"
				android:layout_gravity="center"
				android:gravity="left" />
			
		</LinearLayout>
	</ScrollView>
</LinearLayout>
