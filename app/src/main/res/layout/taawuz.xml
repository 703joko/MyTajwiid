<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="top">
    <TextView
        android:text="Hukum Bacaan Taâ€™awuz"
        android:id="@+id/t"
		android:textSize="22sp"
		android:background="@drawable/bg"
		android:gravity="center"
		android:textColor="#fff"
		android:paddingTop="10dip"
		android:layout_gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
	<ScrollView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<LinearLayout 
			android:background="@drawable/bgg"
			android:id="@+id/tt"
			android:visibility="gone"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center">
			<TextView android:padding="10dip"
				android:text="@string/taawuz"
				android:textSize="18sp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/taawuz"
				android:id="@+id/img"
				android:layout_gravity="center"
				android:gravity="left" />
			<Button
				android:id="@+id/taawuz"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="Contoh Suara"/>
		</LinearLayout>
	</ScrollView>
    <TextView
        android:text="Hukum Bacaan Basmalah"
        android:id="@+id/b"
		android:textSize="22sp"
		android:background="@drawable/bg"
		android:gravity="center"
		android:textColor="#fff"
		android:paddingTop="10dip"
		android:layout_gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
	<ScrollView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<LinearLayout 
			android:background="@drawable/bgg"
			android:id="@+id/bb"
			android:visibility="gone"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center">
			<TextView android:padding="10dip"
				android:text="@string/basmalah"
				android:textSize="18sp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/basmalah"
				android:id="@+id/img"
				android:layout_gravity="center"
				android:gravity="left" />
			<Button
				android:id="@+id/bismilah"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="Contoh Suara"/>
		</LinearLayout>
	</ScrollView>
	

</LinearLayout>
